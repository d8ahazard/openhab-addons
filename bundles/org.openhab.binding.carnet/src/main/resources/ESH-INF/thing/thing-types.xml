<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="carnet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="vehicle">
		<label>Vehicle</label>
		<description>The thing represents one vehicle</description>

		<channel-groups>
			<channel-group id="general" typeId="general" />
			<channel-group id="status" typeId="status" />
			<channel-group id="gas" typeId="gas" />
			<channel-group id="windows" typeId="windows" />
			<channel-group id="doors" typeId="doors" />
			<channel-group id="tires" typeId="tires" />
			<channel-group id="maintenance" typeId="maintenance" />
		</channel-groups>

		<config-description-ref uri="thing-type:carnet:vehicle" />
	</thing-type>

	<channel-group-type id="general">
		<label>Vehicle</label>
		<description>General information on the vehicle</description>
		<channels>
			<channel id="vin" typeId="vin" />
			<channel id="update" typeId="update" />
			<channel id="lock" typeId="lock" />
		</channels>
	</channel-group-type>
	<channel-group-type id="status">
		<label>Status</label>
		<description>Vehicle Status</description>
	</channel-group-type>
	<channel-group-type id="gas">
		<label>Gas / Electrical</label>
		<description>Status values around gas or electrical</description>
	</channel-group-type>
	<channel-group-type id="maintenance">
		<label>Maintenance</label>
		<description>Maintenance Data</description>
	</channel-group-type>
	<channel-group-type id="windows">
		<label>Windows</label>
		<description>Status of the windows</description>
	</channel-group-type>
	<channel-group-type id="doors">
		<label>Doors</label>
		<description>Status of all doors</description>
	</channel-group-type>
	<channel-group-type id="tires">
		<label>Tires</label>
		<description>Status of all tires</description>
	</channel-group-type>

	<channel-type id="vin">
		<item-type>String</item-type>
		<label>VIN</label>
		<description>The Vehicle Identification number - a unique ID to identify the vehicle</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="lock">
		<item-type>Switch</item-type>
		<label>Lock</label>
		<description>Lock/unlock doors</description>
	</channel-type>
	<channel-type id="update">
		<item-type>Switch</item-type>
		<label>Update Car Data</label>
		<description>Every change to this channel requests an update of the vehicle information</description>
	</channel-type>

</thing:thing-descriptions>
